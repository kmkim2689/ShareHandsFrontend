<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="pic"
            type="com.sharehands.sharehands_frontend.model.search.ServicePic" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_uploaded_pic"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="12dp"
            android:background="@drawable/frame_preview_thumbnail"/>

        <ImageView
            android:id="@+id/btn_delete_pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="@id/iv_uploaded_pic"
            app:layout_constraintEnd_toEndOf="@id/iv_uploaded_pic"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-8dp"
            android:src="@drawable/ic_delete_pic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

