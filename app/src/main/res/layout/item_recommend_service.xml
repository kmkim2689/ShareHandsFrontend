<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="40dp"
    android:background="@drawable/rectangle_shadow_rad40">

    <ImageView
        android:id="@+id/iv_recommend_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rectangle_service_mgt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/tv_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_recommend_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        tools:text="봉사 제목"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_recommend_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clock"
        app:tint="@color/sharehands_green_strong"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend_title"
        app:layout_constraintStart_toStartOf="@id/tv_recommend_title"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_recommend_month_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_recommend_date_time"
        app:layout_constraintTop_toTopOf="@id/iv_recommend_date_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommend_date_time"
        tools:text="3"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_recommend_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_month_num"
        app:layout_constraintTop_toTopOf="@id/iv_recommend_date_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommend_date_time"
        android:text="월"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recommend_day_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_month"
        app:layout_constraintTop_toTopOf="@id/iv_recommend_date_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommend_date_time"
        tools:text="20"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/tv_recommend_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_day_num"
        app:layout_constraintTop_toTopOf="@id/iv_recommend_date_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommend_date_time"
        android:text="일"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recommend_hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11"
        app:layout_constraintTop_toTopOf="@id/iv_recommend_date_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommend_date_time"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_day"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/tv_recommend_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text=":"
        app:layout_constraintTop_toTopOf="@id/tv_recommend_hr"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_hr"
        app:layout_constraintBottom_toBottomOf="@id/tv_recommend_hr"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/tv_recommend_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        app:layout_constraintTop_toTopOf="@id/tv_recommend_hr"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_sep"
        app:layout_constraintBottom_toBottomOf="@id/tv_recommend_hr"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:textColor="@color/text_color" />

    <ImageView
        android:id="@+id/iv_recommend_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@id/iv_recommend_date_time"
        app:layout_constraintStart_toStartOf="@id/iv_recommend_date_time"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_recommend_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_recommend_location"
        app:layout_constraintTop_toTopOf="@id/iv_recommend_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommend_location"
        android:layout_marginStart="8dp"
        tools:text="한국외국어대학교"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_recommend_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>